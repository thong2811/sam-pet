</div>

<script>
    let tableInputRowHtml = ``;
    let productList = [];
    $(document).ready(function() {
        tableInputRowHtml = $('.table-form').find('tbody').html();
        $('.select2').select2();
        initVariable();

        $('.date-picker').datepicker({
            format: 'dd-mm-yyyy',
            autoclose:true
        });
    });

    $(document).keypress(event => {
        if (event.which == '13') {
            event.preventDefault();
        }
    });

    function initVariable() {
        let data = $('#productList').val();
        productList = JSON.parse(data);
    }

    function addInputRow(elm) {
        let value = $(elm).val();
        const tbodyElm = $(elm).closest('tbody');
        const trElm = $(elm).closest('tr');

        const productData = productList[value] ?? {};
        const datePicked = trElm.find('.date-picker').val();

        trElm.find('#purchasePrice').val(productData.purchasePrice || 0);
        trElm.find('#sellingPrice').val(productData.sellingPrice || 0);

        if (value) {
            if ($('.select-product').last().val() !== '') {
                tbodyElm.append(tableInputRowHtml);
                tbodyElm.find('.select2').select2();
                const datePicker = tbodyElm.find('.date-picker');
                datePicker.val();
                datePicker.datepicker({
                    format: 'dd-mm-yyyy',
                    autoclose:true
                });
                datePicker.val(datePicked);
            }
        }
    }

    function removeInputRow(elm) {
        $(elm).closest('tr').remove();
    }
</script>