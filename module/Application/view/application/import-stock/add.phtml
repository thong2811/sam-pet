    <form method="post" action="/import-stock/do-add">
        <div class="container">
            <table class="table table-striped table-form mt-3">
                <thead>
                <tr>
                    <th style="width: 150px">Ngày</th>
                    <th>Tên hàng hóa</th>
                    <th style="width: 150px">Giá nhập</th>
                    <th style="width: 150px">Số lượng</th>
                    <th style="width: 400px">Ghi chú</th>
                    <th style="width: 100px">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
                        <input class="form-control date-picker w-100" name="date[]" value="<?= date('d-m-Y') ?>" autocomplete="off" required/>
                    </td>
                    <td>
                        <select class="select-product form-control select2" name="productId[]" onchange="addInputRow(this)" required>
                            <option value="">Chọn hàng hóa</option>
                            <?php foreach ($this->productList as $id => $product): ?>
                            <option value="<?= $id ?>"><?= $product['name'] ?? '' ?></option>
                            <?php endforeach; ?>
